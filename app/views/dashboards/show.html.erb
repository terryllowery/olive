<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">What I am learning</h1>
  <hr />

    <% current_user.enrolled_courses.each do |course| %>
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>
      <br />
      <%= image_tag course.image, class: 'img-fluid col-6 offset-3' %>
      <br />
      <br />
      <div class="row">
        <div class="col-12 col-sm-8">
      <%= course.description %>
        </div>
        <div class="col-12 col-sm-4 text-center">
      <%= link_to "More info...", course_path(course), class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
    <% end %>
  <hr class="col-8 offset-2"/>
  <h1 class="text-center">What I am teaching</h1>
  <hr class="clr"/>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid col-6 offset-3' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2" />
    <br class="clr" />
  <% end %>

</div>

