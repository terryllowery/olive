<!DOCTYPE html>
<html>
  <head>
    <title>Olive</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet" />
  </head>

  <body>
  <div id="flex-content-container">
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= link_to 'OLIVE', root_path, class: 'navbar-brand' %>
    <div class="collapse navbar-collapse show" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'See All Courses', courses_path %>
        </li>
      </ul>
      <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="navbar-nav">
          <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="navbar-nav">
          <%= link_to 'Register', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
      </ul>
    </div>
  </nav>
  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Instructors</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to "My Dashboard", dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', url: '#' %>
          <br />
          <%= link_to 'Careers', url: '#' %>
          <br />
          <%= link_to 'Privacy Policy', url: '#' %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          <%= mail_to "terry@lowerytech.net", "Contact us", subject: "Info for Olive video training" %>
          <br />
          1 Technology Way
          <br />
          San Antonio, TX. 78218
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <%= link_to 'https://twitter.com/terryllowery', target: '_blank' do %>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          <% end %>
          <%= link_to 'https://github.com/terryllowery', target: '_blank' do %>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <%= link_to 'https://www.facebook.com/terry.lowery.750', target: '_blank' do %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
          <% end %>
          <br />
        </div>
      </div>



    </div>
  </div>

  <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
