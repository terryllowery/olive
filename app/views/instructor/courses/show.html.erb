<script>
$(function () {

	  $('.new-lesson-button').click(function ( event ) {
	  	  var lessonUrl = $(event.target).data('lesson-url');
	  	  $('#newLessonForm').attr('action', lessonUrl);
	});

    $('.lessons').sortable({
        update: function (event, ui) {
        	$.ajax({
              type: 'PUT',
              url: ui.item.data('lesson-url'),
              dataType: 'json',
              data: {lesson: { row_order_position: ui.item.index()}}
          });
		}
    });
});

$(function () {
    $('.sections').sortable({
        update: function (event, ui) {
            $.ajax({
                type: 'PUT',
                url: ui.item.data('section-url'),
                dataType: 'json',
                data: {section: {row_order_position: ui.item.index()}}
            });
		}
    });
});
</script>
<br />
<div class="booyah-box">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= image_tag current_course.image, class: 'img-fluid' %>
  <br />
  <br />
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />
  <h2 class="text-center">Sections</h2>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-large btn-primary" data-toggle="modal" data-target="#newSectionModal">
    Add a new section
  </button>
  <ul class="sections">
    <% current_course.sections.rank(:row_order).each do |section| %>
    <li data-section-url="<%= instructor_section_path section %>" class="section-li">
      <div class="header">
      <span class="fa fa-ellipsis-v"></span>
        <%= section.title %>
      </div>
        <!-- New Lesson Button trigger modal -->
        <button type="button" class="float-right btn btn-primary btn-sm new-lesson-button" data-toggle="modal"
                data-target="#newLessonModal" data-lesson-url="<%= instructor_section_lessons_path(section) %> ">
          New Lesson
        </button>
      <br />
        <ul class="lessons">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li data-lesson-url="<%= instructor_lesson_path lesson %>">
              <div class="row">
                <div class="col-1">
                  <br class="clr" />
                  <br class="clr" />
               <span class="fa fa-ellipsis-v"></span>
                </div>
                <div class="col-11 text-center">
              <p>
              <b><%= lesson.title %></b>
              </p>
              <p>
              <%= lesson.subtitle %>
              </p>
                </div>
              </div>
              <br class="clr" />
            </li>
          <% end %>
        </ul>
      <br class="clr" />
    </li>
    <% end %>
  </ul>


</div>

<!-- New Section Modal -->
<div class="modal fade" id="newSectionModal" tabindex="-1" role="dialog" aria-labelledby="newSectionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newSectionModal">Add a new section</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @section, url: instructor_course_sections_path(current_course) do |f| %>
      <div class="modal-body">
          <%= f.input :title %>
          <br />

          <br />
          <br />
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add a new Section", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>



<!-- New Lesson Modal -->
<div class="modal fade" id="newLessonModal" tabindex="-1" role="dialog" aria-labelledby="newLessonModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newLessonModal">Add New Lesson</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!--TODO: Fix new lesson url -->
      <%= simple_form_for @lesson, url: '#', html: {id: 'newLessonForm'} do |f| %>
      <div class="modal-body">
          <%= f.input :title %>
          <%= f.input :subtitle %>
          <%= f.input :video %>
          <br />

          <br />
          <br />

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add the lesson", class: "btn btn-primary"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
